# Threads Traffic Management System - Configuration

# API Keys
OPENAI_API_KEY=your_openai_api_key_here

# Database
DATABASE_PATH=database/threads_traffic.db

# Main account credentials (account to promote)
MAIN_ACCOUNT_USERNAME=your_main_username
MAIN_ACCOUNT_PASSWORD=your_main_password

# Bot accounts (you can add more by incrementing the number)
BOT_ACCOUNT_1_USERNAME=your_bot_username_1
BOT_ACCOUNT_1_PASSWORD=your_bot_password_1

# System configuration
MAX_FOLLOWS_PER_DAY=50
MAX_REPLIES_PER_DAY=100
SCRAPE_INTERVAL_MINUTES=60
LOG_LEVEL=INFO

# AI Configuration
DEFAULT_AI_MODEL=gpt-3.5-turbo
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=150

# Safety settings
BROWSER_COOLDOWN_MIN_SECONDS=3
BROWSER_COOLDOWN_MAX_SECONDS=8
TYPING_SPEED_MIN_CPS=5
TYPING_SPEED_MAX_CPS=12

# Proxy configuration
USE_PROXIES=false

# Dashboard settings
DASHBOARD_PORT=8501
DASHBOARD_UPDATE_INTERVAL=60
